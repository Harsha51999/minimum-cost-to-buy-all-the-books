#include<iostream>
using namespace std;
int getMinCost(int ratings[], int n) {
 int res = 0;
 int LtoR[n];
 int RtoL[n];
 for(int i = 0; i<n; i++){
 LtoR[i] = RtoL[i] = 1;
 }


 for (int i = 1; i < n; i++)
 if (ratings[i] > ratings[i - 1])
 LtoR[i] = LtoR[i - 1] + 1;
 for (int i = n - 2; i >= 0; i--)
 if (ratings[i] > ratings[i + 1])
 RtoL[i] = RtoL[i + 1] + 1;
 for (int i = 0; i < n; i++)
 res += max(LtoR[i], RtoL[i]);
 return res;
}
int main() {
 int ratings[] = { 1, 6, 8, 3, 4, 1, 5, 7 };
 int n = sizeof(ratings) / sizeof(ratings[0]);
 cout << "Minimum cost is: " << getMinCost(ratings, n);
}
